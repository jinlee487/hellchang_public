<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="green.mappers.exerciseMapper">
 
   <select id="selectList" resultType="vo.ExerciseVO" >
	select * from `hellchang_schema`.`exercise` where target = #{target}
   </select>	  
	
	<!-- memberDetail() -->
  <select id="selectOne" resultType="vo.ExerciseVO">
  	select * from `hellchang_schema`.`exercise` where target=#{target}
  </select>		
  
   <insert id="saveMyRoutine">
	insert into `hellchang_schema`.`myRoutine` values 
	 (#{id}, #{name}, #{target}, #{date}, #{title},#{shared})
  </insert>  
  
  <insert id="saveMyRM">
	insert into `hellchang_schema`.`saveRM`(id,bench,dead,squat,date) values 
	 (#{id}, #{bench}, #{dead}, #{squat}, #{date})
  </insert>  

   <select id="RmList" resultType="vo.RmVO" >
	select * from `hellchang_schema`.`saveRM` where id = #{id} order by date desc limit 3;
   </select>
   
   <select id="RmListB" resultType="vo.RmVO" >
   <![CDATA[
	select * from `hellchang_schema`.`saveRM` where id = #{id} and date < #{date} 
	order by date desc limit 3;
   ]]>
   </select>
   
   <select id="RmListA" resultType="vo.RmVO" >
   <![CDATA[
	select * from `hellchang_schema`.`saveRM` where id = #{id} and date > #{date} 
	order by date desc limit 3;
   ]]>
   </select>
   
 </mapper>
 
